<%- include("./partials/header.ejs") %>

<div class="margin">
  <h1>Home</h1>
  <p><%= homeStartingContent %></p>
  <% posts.forEach((post)=>{ %>
  <h1><%= post.postTitle %></h1>
  <p>
    <%= `${post.postBody.substring(0, 100)}...` %>
    <a href="/posts/<%= post._id %>">Read more</a>
  </p>
  <% }) %>
</div>

